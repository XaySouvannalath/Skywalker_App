<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ge.skywalker.About">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="matrix"
        app:srcCompat="@drawable/aboutwallpaper2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:background="@drawable/back"
        app:srcCompat="@drawable/skybase"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/back"
        app:srcCompat="@drawable/myprofile"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"

        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="ເປັບແອັບພິເຄເຂີນເທີງມືຖືທີ່ທ່ານສາມາດສຶກສາຮຽນຮຸ້ເລື້ອງຕ່າງໆກ່ຽວກັບຄອມພິວເຕີ. ປະກອບມີບົດຮຽນ, ຄໍາຖາມ ແລະ ຊຸມຊົນທີ່ສາມາດແບ່ງປັນເລື່ອງລາວກັນໄດ້."
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="ພັດທະນາໂດຍ"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginTop="12dp"
        android:text="ທ້າວ ໄຊຍະວົງ ມິດທະສອນ" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="12dp"
        android:text="ເບີໂທ: +8562077199705" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="13dp"
        android:text="ອີເມລ: saiyavongmitthasone@gmail.com" />


</RelativeLayout>
