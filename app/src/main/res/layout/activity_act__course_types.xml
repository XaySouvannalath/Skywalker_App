<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ge.skywalker.act_CourseTypes">



    <EditText
        android:id="@+id/etcoursetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="202dp"
        android:ems="10"
        android:hint="ປ້ອນປະເພດຫຼັກສູດ"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/coursetype"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/etcoursetype"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp">

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/etcoursetype"
            android:layout_toStartOf="@+id/imageView"
            android:background="@color/cardview_initial_background"
            android:text="ບັນທຶກ"
            android:onClick="savect"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btsavecoursetype"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/etcoursetype"
            android:layout_toEndOf="@+id/imageView"
            android:onClick="closebutton"
            android:background="@color/colorAccent"
            android:text="ຍົກເລີກ"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>
