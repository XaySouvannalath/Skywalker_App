<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="addDataDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">26sp</item>
        <item name="android:navigationBarColor">@android:color/holo_red_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="coursesTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="chapterTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="headingTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="chapterTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="chapterTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
